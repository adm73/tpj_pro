<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chyapp.tpj_pro_android.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iw_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbar_temperature"
        android:max="1000"
        android:visibility="visible"
        android:layout_alignTop="@+id/pbar_brightness"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swh_cover"
        android:layout_above="@+id/swh_fan"
        android:layout_alignLeft="@+id/pbar_temperature"
        android:layout_alignStart="@+id/pbar_temperature" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swh_fan"
        android:layout_above="@+id/swh_heater"
        android:layout_alignLeft="@+id/swh_cover"
        android:layout_alignStart="@+id/swh_cover" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swh_heater"
        android:layout_above="@+id/swh_wpump"
        android:layout_alignLeft="@+id/swh_wpump"
        android:layout_alignStart="@+id/swh_wpump" />

    <TextView
        android:text="Temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/lb_temperaure"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/bt_bt_connect"
        android:layout_alignRight="@+id/pbar_temperature"
        android:layout_alignEnd="@+id/pbar_temperature" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbar_brightness"
        android:max="1000"
        android:visibility="visible"
        android:layout_below="@+id/lb_brightness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Switch
        android:text="Switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swh_wpump"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/swh_fan"
        android:layout_alignStart="@+id/swh_fan" />

    <TextView
        android:text="Brightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_brightness"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/lb_temperaure"
        android:layout_alignBottom="@+id/lb_temperaure"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_bt_connect"
        android:onClick="onClickBtn"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/pbar_temperature"
        android:layout_alignStart="@+id/pbar_temperature" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Connections"
        android:id="@+id/lb_bt_status"
        android:layout_alignBaseline="@+id/bt_bt_connect"
        android:layout_alignBottom="@+id/bt_bt_connect"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbar_humidity"
        android:max="1000"
        android:indeterminate="false"
        android:visibility="visible"
        android:layout_alignTop="@+id/pbar_brightness"
        android:layout_alignLeft="@+id/lb_bt_status"
        android:layout_alignStart="@+id/lb_bt_status" />

    <TextView
        android:text="Humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lb_Humidity"
        android:textColor="@color/colorPrimary"
        android:layout_above="@+id/pbar_brightness"
        android:layout_alignRight="@+id/pbar_humidity"
        android:layout_alignEnd="@+id/pbar_humidity"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

</RelativeLayout>
